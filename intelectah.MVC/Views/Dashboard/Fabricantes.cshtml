@model intelectah.MVC.Models.FabricantesViewModel


@{
    Layout = "~/Views/Shared/_LayoutApp.cshtml";
}

@{
    ViewData["Title"] = "Cadastro";
}


<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">Adicionar Novo Fabricante</h4>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Create", "Fabricante", FormMethod.Post))
                    {
                        <div class="form-group">
                            @Html.LabelFor(model => model.Nome, "Nome do Fabricante", new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.Nome, new { @class = "form-control", placeholder = "Insira o nome do fabricante" })
                            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Pais, "País de Origem", new { @class = "form-label" })
                            @Html.DropDownListFor(model => model.Pais, new SelectList(ViewBag.Countries, "Value", "Text"), "Selecione um país", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Pais, "", new { @class = "text-danger" })
                        </div>


                        <div class="form-group">
                            @Html.LabelFor(model => model.AnoFundacao, "Ano de Fundação", new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.AnoFundacao, new { @class = "form-control", placeholder = "Insira o ano de fundação", type = "number" })
                            @Html.ValidationMessageFor(model => model.AnoFundacao, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Website, "URL do Website", new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.Website, new { @class = "form-control", placeholder = "Insira o URL do website" })
                            @Html.ValidationMessageFor(model => model.Website, "", new { @class = "text-danger" })
                        </div>

                        <button type="submit" class="btn btn-success mt-3">Adicionar Fabricante</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
