@model intelectah.MVC.Models.FabricantesViewModel


@{
    Layout = "~/Views/Shared/_LayoutApp.cshtml";
}

@{
    ViewData["Title"] = "Fabricantes";
}


<div class="container">

    <div class="row ">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">Lista de Fabricantes</h4>
                </div>
                <div class="card-body">

                    <div class="mb-3">
                        <a href="/Fabricante/Cadastrar" class="btn btn-secondary w-100 mt-2"> Adicionar Novo Fabricante</a>

                    </div>

                    <table id="fabricantesTable" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>País de Origem</th>
                                <th>Ano de Fundação</th>
                                <th>Website</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Fabricantes != null && Model.Fabricantes.Count > 0)
                            {
                                foreach (var fabricante in Model.Fabricantes)
                                {
                                    <tr>
                                        <td>@fabricante.Nome</td>
                                        <td>@fabricante.PaisOrigem</td>
                                        <td>@fabricante.AnoFundacao</td>
                                        <td>@fabricante.Website</td>
                                        <td class="text-center">
                                            <a onclick="FctEditarFabricante(@fabricante.Id)"; class="btn btn-warning btn-sm"><i class="bi bi-pencil"></i> Editar</a>
                                            <a onclick="FctDeletarFabricante(@fabricante.Id)"; class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Deletar</a>
                                        </td>
                                        
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>


<link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/dataTables.bootstrap5.min.css" />

<script src="~/js/Fabricante/fabricante.js"></script>
<script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.24/js/dataTables.bootstrap5.min.js"></script>

