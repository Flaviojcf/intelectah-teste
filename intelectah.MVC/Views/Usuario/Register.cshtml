@model intelectah.MVC.Models.RegisterUsuarioViewModel


@{
    ViewData["Title"] = "Cadastro";
}

@{
    Layout = "~/Views/Shared/_LayoutApp.cshtml";
}

<link href="~/css/sign-in.css" rel="stylesheet" />

<div>
    <main class="form-signin w-100 m-auto" style="max-width: 500px;" id="register">
        <form id="registerForm" action="/Usuario/Cadastrar" method="post">

             <div class="text-center mb-2">
                <h1 class="h3 fw-bold">Cadastro</h1>
                <p class="text-white">Preencha todos os campos abaixo para criar sua conta</p>
            </div>

            <div class="form-floating mb-3">
                <select asp-for="NivelAcesso" asp-items="Model.NivelAcessos" class="form-control" id="floatingNivelAcesso">
                    <option value="">Selecione o Nível de Acesso</option>
                </select>
                <label for="floatingNivelAcesso">Nível de Acesso</label>
                <span asp-validation-for="NivelAcesso" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Nome" class="form-control" id="floatingNome" placeholder="Nome">
                <label for="floatingNome">Nome</label>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" id="floatingEmail" placeholder="nome@exemplo.com">
                <label for="floatingEmail">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Senha" class="form-control" id="floatingPassword" type="password" placeholder="Senha">
                <label for="floatingPassword">Senha</label>
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>

            <button id="submitButton" class="btn btn-primary w-100 py-2" type="button" onclick="FctCadastrar(event)">
                Cadastrar
                <span id="spinner" class="spinner-border spinner-border-sm ms-2 d-none" role="status" aria-hidden="true"></span>
            </button>

            <a href="/Home/Index" class="btn btn-secondary w-100 mt-2">Fazer Login</a>

        </form>
    </main>
</div>


<script src="~/js/Usuario/usuario.js"></script>
