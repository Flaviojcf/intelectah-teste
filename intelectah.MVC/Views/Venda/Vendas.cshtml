        @Html.ValidationMessageFor(model => model.DataVenda, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PrecoVenda, "Preço de Venda", new { @class = "form-label" })
        @Html.TextBoxFor(model => model.PrecoVenda, new { @class = "form-control", placeholder = "Digite o preço de venda" })
        @Html.ValidationMessageFor(model => model.PrecoVenda, "", new { @class = "text-danger" })
    </div>

