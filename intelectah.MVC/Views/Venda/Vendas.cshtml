@model intelectah.MVC.Models.VendaViewModel

@using (Html.BeginForm("RegistrarVenda", "Venda", FormMethod.Post, new { id = "registerVendaForm" }))
{
    <div class="form-group">
        @Html.Label("Veiculo", "Veículo", new { @class = "form-label" })
        @Html.TextBox("Veiculo", null, new { @class = "form-control", placeholder = "Pesquisar veículo por modelo ou fabricante", oninput = "FctPesquisarVeiculo(this.value)" })
        @Html.DropDownListFor(model => model.VeiculoID, new SelectList(Enumerable.Empty<SelectListItem>(), "Value", "Text"), "Selecione um veículo", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Concessionaria", "Concessionária", new { @class = "form-label" })
        @Html.TextBox("Concessionaria", null, new { @class = "form-control", placeholder = "Pesquisar concessionária por nome ou localização", oninput = "FctPesquisarConcessionaria(this.value)" })
        @Html.DropDownListFor(model => model.ConcessionariaID, new SelectList(Enumerable.Empty<SelectListItem>(), "Value", "Text"), "Selecione uma concessionária", new { @class = "form-control" })
    </div>

